<div class="container mt-5">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image:
        linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
        <h2><%= list.name %></h2>
      </div>
    <% end %>
  </div>
</div>
