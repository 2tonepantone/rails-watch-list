<div class="container mt-5">
  <div class="container-header">
    <h1><%= @list.name %></h1>
    <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-light" %>
  </div>
  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <% movie = bookmark.movie %>
      <div class="card-trip">
        <%= image_tag movie.poster_url, alt: "Le Wagon", width: 200 %>
        <div class="card-trip-infos">
          <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
          </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <p><%= bookmark.comment %></p>
          <%= link_to 'ðŸ—‘', bookmark_path(bookmark), method: "DELETE",
              data: {confirm: "Do you really want to delete #{movie.title}?"} %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
</div>
