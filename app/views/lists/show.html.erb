<%= render 'lists/banner', list: @list %>
<div class="container mt-2">
  <div class="container-header d-flex justify-content-end mb-2">
    <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-light" %>
  </div>
  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <% movie = bookmark.movie %>
      <div class="card-trip">
        <%= image_tag movie.poster_url, alt: "Le Wagon", width: 200 %>
        <div class="card-trip-infos">
          <div>
            <h2><%= movie.title %></h2>
            <span>Rating: <%= movie.rating %> star(s)</span>
            <p><%= movie.overview %></p>
          </div>
        </div>
        <div class="card-footer h-100 d-flex justify-content-between">
          <p><%= bookmark.comment %></p>
          <%= link_to 'ğŸ—‘', bookmark_path(bookmark), method: "DELETE",
              data: {confirm: "Do you really want to delete #{movie.title}?"},
              class: "btn btn-light"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
